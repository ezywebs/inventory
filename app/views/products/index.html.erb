<h1>List of all products</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>SKU</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.sku %></td>
        <td><%= product.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>