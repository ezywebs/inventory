<h1>Inventory app</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>SKU</th>
      <th>In Stock</th>
      <th>Category</th>
      <th>Buy Price</th>
      <th>Sale Price</th>
    </tr>
  </thead>
  <tbody>
    <% @inventory.each do |i| %>
      <tr>
        <td><%= i.product.name %></td>
        <td><%= i.product.sku %></td>
        <td><%= i.available %></td>
        <td><%= i.product.category.name %></td>
        
        <td><%= i.product.price.present? ? i.product.price.buy : "N/A" %></td>
        <td><%= i.product.price.present? ? i.product.price.sale : "N/A" %></td>
      </tr>
    <% end %>
  </tbody>
</table>