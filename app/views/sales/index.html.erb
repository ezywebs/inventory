<h1>Sales</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Sale Date</th>
      <th>Products</th>
      <th>Tax Collected</th>
      <th>Delivery Charge</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.created_at %></td>
        <td>
          <% sale.product_sales.each do |ps| %>
           <%= "#{ps.product.name}: #{ps.quantity}" %>
          <% end %>
        </td>
        <td><%= sale.tax %></td>
        <td><%= sale.delivery %></td>
        <td><%= sale.total %></td>
      </tr>
    <% end %>
  </tbody>
</table>