<h1>Price List</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Product</th>
      <th>Buy</th>
      <th>Sale</th>
    </tr>
  </thead>
  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.product.name %></td>
        <td><%= price.buy %></td>
        <td><%= price.sale %></td>
      </tr>
    <% end %>
  </tbody>
</table>